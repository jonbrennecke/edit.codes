- # Login page which (for now) is serving as a home page
- #
- #

- title = "edit.codes"

!!! 5
%html
	%head

		- # compass stylesheet stuffs
		%link{ :rel => "stylesheet", :media => "screen, projection", :type => "text/css", :href => "../css/stylesheets/screen.css" }
		/[if IE]
			%link{ :rel => "stylesheet", :media => "screen, projection", :type => "text/css", :href => "../css/stylesheets/ie.css" }
		%link{ :rel => "stylesheet", :media => "print", :type => "text/css", :href => "../css/stylesheets/print.css" }


		/%script{ :type => 'text/javascript', :src => '../jquery.min.js' }

		%title #{title}
	%body

		- # navigation bar
		%nav
			%header
				%h1 #{title}
				%div{ :class => 'header-actions'}
					%ul
						%li 
							%a{ :href => '', :class => 'big-green-button' } Sign in

		- # signup form
		%section{ :class => 'signup-home' }
			%div{ :class => 'container' }
				%header welcome
				%form{ :class => 'form-signup-home', :method => 'post', :action => '/register' }
					%input{ :type => 'text', :name => 'username', :placeholder => 'Pick a username' }
					%input{ :type => 'text', :name => 'email', :placeholder => 'Your email' }
					%input{ :type => 'password', :name => 'password', :placeholder => 'Create a password' }
					%p Use at least one lowercase letter, one numeral, and seven characters.
					%input{ :type => 'submit', :value => 'Sign Up for Free', :class => 'big-green-button' }

		- # footer area
		%footer
			%div{ :class => "links" }
			
				-# Codio's ILOS button
				%a{ :href => "http://www.iloveopensource.io/projects/537107f587659fce66002807" }
					%img{ :class => 'ilos', :src => "https://github.com/codio/iloveopensource/blob/master/public/images/logo-lightbg.png?raw=true" }
			%cite
				%p 
					This website is completely open source and is distributed under the MIT License.  
					%a{ :href => "https://github.com/jonbrennecke/edit.codes" } Fork this page on Github
				%p Copyright Â© 2014 Jon Brennecke unless otherwise specified.  All rights reserved.
								